<UserControl
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        x:Class="RestaurantManagement.Views.Kitchen"
        mc:Ignorable="d"
        d:DesignHeight="660" d:DesignWidth="1060" Background="White">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Danh sách các món cần thực hiện -->
        <Border x:Name="OrderView" BorderBrush="Black" CornerRadius="15" Background="#FFF1F0EE" Margin="10">
            <Grid>
                <Label Content="DANH SÁCH CÁC MÓN CẦN THỰC HIỆN:" Margin="10,10,10,0" VerticalAlignment="Top" Foreground="#E5000000" FontSize="16"/>
                <ScrollViewer Margin="10,50,10,10" VerticalScrollBarVisibility="Auto">
                    <ListView ItemsSource="{Binding ListOrder}" SelectedItem="{Binding OrderSelected}"
                              IsSynchronizedWithCurrentItem="True" Foreground="#E5120101" BorderBrush="#7F6F3333" 
                              HorizontalContentAlignment="Center" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="140" Header="Tên món" DisplayMemberBinding="{Binding TenDoAnUong}" />
                                <GridViewColumn Width="120" Header="Số lượng" DisplayMemberBinding="{Binding SoLuong}"/>
                                <GridViewColumn Width="120" Header="Số bàn" DisplayMemberBinding="{Binding IDBan}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Danh sách các món cần phục vụ -->
        <Border BorderBrush="Black" Grid.Column="1" CornerRadius="15" Background="#FFF1F0EE" Margin="10">
            <Grid>
                <Label Content="DANH SÁCH CÁC MÓN CẦN PHỤC VỤ:" Margin="10,10,10,0" VerticalAlignment="Top" FontSize="16" Foreground="#E5000000"/>
                <ScrollViewer Margin="10,50,10,10" VerticalScrollBarVisibility="Auto">
                    <ListView ItemsSource="{Binding ListDone}" SelectedItem="{Binding DoneSelected}"
                              IsSynchronizedWithCurrentItem="True" Foreground="#E5150101" BorderBrush="#7F712828" 
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="140" Header="Tên món" DisplayMemberBinding="{Binding TenDoAnUong}"/>
                                <GridViewColumn Width="120" Header="Số lượng" DisplayMemberBinding="{Binding SoLuong}"/>
                                <GridViewColumn Width="120" Header="Số bàn" DisplayMemberBinding="{Binding IDBan}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Nút "ĐÃ THỰC HIỆN XONG" -->
        <Button Content="ĐÃ THỰC HIỆN XONG"
                Command="{Binding MarkAsDoneCommand}"
                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Background="#FF701C1C" Foreground="White" BorderBrush="Black"
                Margin="10" Height="50" VerticalAlignment="Bottom" Grid.Column="0"/>

        <!-- Nút "ĐÃ PHỤC VỤ CHO KHÁCH" -->
        <Button Content="ĐÃ PHỤC VỤ CHO KHÁCH"
                Command="{Binding ServeDishCommand}"
                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Background="#FF701C1C" Foreground="White" BorderBrush="Black"
                Margin="10" Height="50" VerticalAlignment="Bottom" Grid.Column="1"/>
    </Grid>
</UserControl>
